<h1>Listing All Expenditure Types</h1>

<table id="table1">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3">Links</th>
    </tr>
  </thead>

  <tbody>
    <% @settings_types.each do |settings_type| %>
      <%= content_tag_for(:tr, settings_type) do %>
        <td><%= settings_type.description %></td>
        <td><%= link_to 'Show', settings_type %></td>
        <td><%= link_to 'Edit', edit_settings_type_path(settings_type) %></td>
        <td><%= link_to 'Destroy', settings_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

